<div class="row vertical-offset-100">
  <div class="col-md-8 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading"><span class="glyphicon glyphicon-lock"></span> Login</div>
      <div class="panel-body">
        <%= form_tag login_path , class: 'form-horizontal'  do %>
          <div class="form-group">
            <%= label_tag :email, nil, class: 'col-sm-3 control-label' %>
            <div class="col-sm-7">
              <%= text_field_tag :email, nil, placeholder: 'Email', class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= label_tag :password, nil, class: 'col-sm-3 control-label' %>
            <div class="col-sm-7">
              <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <%= check_box_tag :remember_me %>
              <%= label_tag :remember_me, nil, class: 'remember_me' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <%= submit_tag t('login'), class: 'btn btn-success btn-sm' %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= t('not_registered') %> <%= link_to 'Sign Up', signup_path %>
        <%= link_to t('forgot_password'), forgot_password_users_path, class: 'pull-right' %>
      </div>
    </div>
  </div>
</div>
