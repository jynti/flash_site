<div class="row vertical-offset-100">
  <div class="col-md-8 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading"><span class="glyphicon glyphicon-bell"></span> Reset Password</div>
      <div class="panel-body">
        <%= form_for  @user, as: :user,  url: update_password_user_path(@user), html: {class: 'form-horizontal'} do |f| %>
          <div class="field form-group">
            <%= f.label :password, class: 'col-sm-4 control-label' %>
            <div class="col-sm-5">
              <%= f.password_field :password, class: 'form-control' %>
              <%= error_message_on f.object, :password %>
            </div>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation, class: 'col-sm-4 control-label' %>
            <div class="col-sm-5">
              <%= f.password_field :password_confirmation, class: 'form-control' %>
              <%= error_message_on f.object, :password_confirmation %>
            </div>
          </div>

          <div class="actions form-group">
            <div class="col-sm-offset-4 col-sm-5">
              <%= f.submit t('.confirm_reset_password'), class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

