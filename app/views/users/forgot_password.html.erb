<h1>Forgot password?</h1>

<%= form_tag send_reset_password_email_customers_path do %>
  <div  class="field form-group">
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </div>

  <div class="actions form-group">
    <%= submit_tag 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
