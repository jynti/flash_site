<%= form_for [:admins, @deal],  html: {class: 'form-horizontal'} do |f| %>

  <% unless @deal.new_record? %>
    <div class="status">Status: <%= @deal.state %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :title, class: 'form-control' %>
      <%= error_message_on f.object, :title %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :description, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-5">
      <%= f.text_area :description, class: 'form-control'  %>
      <%= error_message_on f.object, :description %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :price, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-5">
      <%= f.number_field :price, class: 'form-control'  %>
      <%= error_message_on f.object, :price %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :discounted_price, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-5">
      <%= f.number_field :discounted_price, class: 'form-control'  %>
      <%= error_message_on f.object, :discounted_price %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :quantity, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-5">
      <%= f.number_field :quantity, class: 'form-control'  %>
      <%= error_message_on f.object, :quantity %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :publish_date, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-5">
      <%= f.date_select :publish_date, class: 'form-control'  %>
      <%= error_message_on f.object, :publish_date %>
    </div>
  </div>

  <div class="field">
      <%= f.fields_for :images do |builder| %>
        <% unless @deal.images.any? %>
          <%= render 'images', f: builder %>
        <% else %>
           <fieldset>
            <%= image_tag builder.object.attachment.url(:thumb) %>
            <%= builder.hidden_field :_destroy %>
            <%= link_to "remove", "#", class: "remove_image" %>
            </fieldset>
        <% end %>
    <% end %>
  </div>

  <%= link_to_add_images "add_images", f, :images %>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>
<%= javascript_include_tag 'admins/deals/form' %>
