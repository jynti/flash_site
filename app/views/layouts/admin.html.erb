<!DOCTYPE html>
<html>
  <head>
    <title>Admin Side</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'admins/base', media: 'all' %>
    <%= javascript_include_tag 'admins/base' %>
  </head>

  <%= render 'layouts/navigation_head' %>
    <body class="container-fluid">

      <div class="row all">

        <div class="col-xs-2 sidenav">
          <%= link_to 'Deals', admins_deals_path %>
          <%= link_to 'Orders', admins_orders_path %>
        </div>

        <div class="col-xs-10 main">
          <div>
              <% flash.each do |name, msg| %>
                <%= content_tag :div, msg, class: "alert alert-#{name}" %>
              <% end %>
          </div>
          <div class="content">
            <%= yield %>
          </div>
        </div>

      </div>

    </body>
</html>
