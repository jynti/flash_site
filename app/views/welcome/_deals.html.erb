<div class="row">
  <% deals.each do |deal| %>
    <div class="col-md-4">
      <div class="thumbnail ">

        <div class="slideshow-container center-block">
          <% deal.images.each do |image| %>
            <div class="myslides">
               <%= image_tag image.attachment.url(:medium) %>
            </div>
          <% end %>
        </div>

        <div class="caption">
          <h4 class="pull-left"><%= number_to_currency deal.discounted_price, locale: :in %></h4>

          <%= form_tag line_items_path do %>
            <%= hidden_field_tag :deal_id, deal.id %>
            <%= hidden_field_tag :price, deal.discounted_price %>
            <div class="deal-buy pull-right", data-deal= "<%= deal.id %>">
              <%= render 'live_deal_quantity', deal: deal %>
            </div>
          <% end %>

          <div class="deal-description">
            <%= deal.description.truncate(30, separator: ' ') %>
          </div>
        </div>

      </div>
    </div>
  <% end %>
</div>
<%= javascript_include_tag 'welcome' %>
<%= javascript_include_tag 'live_deals' %>

